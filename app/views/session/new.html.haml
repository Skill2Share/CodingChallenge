- content_for :header do
  %h1.login-header Skill 2 Share
  #localize-box-login
    -if (I18n.locale == :en)
      = link_to "日本語", :locale=>'ja'
    -if (I18n.locale == :ja)
      = link_to "English", :locale=>'en'   
.login-container
  .login-list
    .login-item-header
      %h3= t('login_page.login')
    .login-item-body{ :style => "display: block;" }
      = form_tag(login_path, id: 'loginForm' ) do
        %input#email{:name => "email", :placeholder => t('login_page.email'), :type => "text"}
        %input#password{:name => "password", :placeholder => t('login_page.password'), :type => "password"}
        =submit_tag t('login_page.login'), :class=>"btn btn-success"
  .login-list
    .login-item-header
      %h3= t('login_page.register')
    .login-item-body
      = form_for User.new, html: { id: 'registerForm'} do |f|
        = f.text_field :name, placeholder: t('login_page.name')
        = f.text_field :email, placeholder: t('login_page.email')
        = f.password_field :password, placeholder: t('login_page.password')
        = f.password_field :password_confirmation, placeholder: t('login_page.password_confirm')
        = f.submit t('login_page.register'), :class=>"btn btn-success"
